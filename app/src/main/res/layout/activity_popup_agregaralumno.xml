<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#83FFFFFF"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9EF8EDED"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="10dp"
                android:text="@string/textTitle"
                android:textColor="#050505"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_nombrealum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar nombre completo:"
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_NombreAlum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <TextView
                android:id="@+id/tv_usuarioalum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar Usuario:"
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_usuarioalum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <TextView
                android:id="@+id/yv_contrase単aalum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar contrase単a: "
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_contrase単aalum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <TextView
                android:id="@+id/tv_ingresargrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textViewA単adirGrupoAlumno"
                android:textColor="#050505"
                android:textSize="18sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#FFFFFF">

                <Spinner
                    android:id="@+id/spinner_grupo"
                    style="@style/spinner_bg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp" />
            </FrameLayout>

            <Button
                android:id="@+id/messageButton"
                style="@style/btn_sinrelleno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/textButton"
                android:textColor="#050505" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>