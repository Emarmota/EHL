<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alumno.MainActivity_Alumno_Ajustes"
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/btn_back_maa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/arrow2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textv_maestroA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Alumno"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_maa" />

    <TextView
        android:id="@+id/txtv_Alumnos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="/ Ajustes"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/textv_maestroA"
        app:layout_constraintTop_toBottomOf="@+id/textv_maestroA"
        tools:text="/ Ajustes" />

    <Button
        android:id="@+id/btn_cambiarContrasena"
        style="@style/btn_sinrelleno"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:text="Cambiar ContraseÃ±a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_Alumnos" />

    <Button
        android:id="@+id/btn_ayuda"
        style="@style/btn_sinrelleno"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="104dp"
        android:text="Ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cambiarContrasena" />

    <Button
        android:id="@+id/btn_contacto"
        style="@style/btn_sinrelleno"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="116dp"
        android:text="Contacto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ayuda" />
</androidx.constraintlayout.widget.ConstraintLayout>