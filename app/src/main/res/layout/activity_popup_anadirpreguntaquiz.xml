<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#83FFFFFF"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="244dp"
        android:layout_height="514dp"
        android:background="#9EF8EDED"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleTextA単adirPregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="10dp"
                android:text="@string/textTitleA単adirPregunta"
                android:textColor="#050505"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa pregunta:"
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa respuesta correcta:"
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_respuestacorrecta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa respuesta:"
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_resp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <TextView
                android:id="@+id/textViewIngresaRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa respuesta:"
                android:textColor="#050505"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_resp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#050505" />

            <Button
                android:id="@+id/ButtonA単adir"
                style="@style/btn_sinrelleno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textButtonA単adir"
                android:textColor="#050505" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>